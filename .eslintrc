{
    "extends": [
        "@nuxtjs/eslint-config-typescript",
        "plugin:vue/vue3-strongly-recommended"
    ],
    "rules": {
        "indent": [
            "warn",
            4
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "comma-dangle": [
            "warn",
            {
                "arrays": "always",
                "objects": "always",
                "imports": "never",
                "exports": "never",
                "functions": "never"
            }
        ],
        "semi": [
            "warn",
            "always"
        ],
        "arrow-parens": [
            "warn",
            "always"
        ],
        "no-unused-vars": "off",
        "camelcase": "off",
        "no-console": "off",
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "import/no-named-as-default": "off",
        "@typescript-eslint/no-unused-vars": "warn",
        "no-multiple-empty-lines": ["error", {
            "max": 1,
            "maxEOF": 1
        }],
        "vue/html-indent": [
            "warn",
            4
        ],
        "vue/max-attributes-per-line": [
            "error",
            {
                "singleline": {
                    "max": 1
                },
                "multiline": {
                    "max": 1
                }
            }
        ],
        "vue/multi-word-component-names": "off",
        "vue/v-on-event-hyphenation": ["error", "never", {
            "ignore": [],
            "autofix": false
        }],
        "vue/no-v-html": "off",
        "vue/attribute-hyphenation": ["error", "never", {
            "ignore": []
        }]
    }
}